{
  "gateway_id": "Gateway1",
  "version": "2.0.0",
  "environment": "production",

  "lora": {
    "enabled": true,
    "port": "/dev/ttyUSB0",
    "baudrate": 9600,
    "timeout": 1.0,
    "retry_attempts": 3,
    "retry_delay": 2
  },
  
  "broker_mqtt": {
    "local": {
      "enabled": true,
      "host": "localhost",
      "port": 8883,
      "use_tls": true,
      
      "ca_cert": "./certs/local/ca.crt",
      "client_cert": "./certs/local/gateway.crt",
      "client_key": "./certs/local/gateway.key",
      
      "client_id": "Gateway1",
      "clean_session": false,
      "keepalive": 60,
      "reconnect_delay": 5,
      "max_reconnect_delay": 120,

      "subscribe_topics": [
        "home/devices/+/telemetry",
        "home/devices/+/request",
        "home/devices/+/status"
      ],
      
      "qos": 1
    }
  },

  "vps": {
    "enabled": true,
    
    "api_url": "https://smarthome-xyz.trycloudflare.com/api",

    "api_key": "your-api-key-here-change-in-production",

    "batch_size": 10,
    "batch_timeout": 30,
    "upload_retry": 3,
    "upload_timeout": 10,

    "sync_interval": 120,
    "sync_on_startup": true
  },

  "security": {
    "hmac_key": "5A5A2B3F87DA01F9DEE183AD8454B534776847â€‹8CE8FD731FBDE13C4279B8FEA4",
    
    "max_time_drift": 300,
    "nonce_cache_size": 10000,

    "rate_limit_enabled": true,
    "rate_limit_window": 60,
    "rate_limit_max_requests": 10
  },
  
  "database": {
    "path": "../config",
    "devices_file": "devices.json",
    "settings_file": "settings.json",

    "local_cache": true,
    "sqlite_file": "cache.db",
    "cache_retention_days": 7,

    "auto_save": true,
    "save_interval": 300
  },

  "logging": {
    "level": "INFO",
    "path": "../logs",
    "max_size_mb": 10,
    "backup_count": 5,
    "console_output": true,
    "file_output": true
  },

  "monitoring": {
    "enabled": true,
    "health_check_interval": 60,
    "statistics_interval": 300,
    "cleanup_old_data_interval": 3600
  },

  "features": {
    "auto_fan_control": true,
    "temperature_monitoring": true,
    "access_logging": true,
    "device_discovery": false
  }
}